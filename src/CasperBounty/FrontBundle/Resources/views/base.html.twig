<html>
<head>
    <script src="{{ asset('assets/vendor/jquery/dist/jquery.js') }}"></script>
    {% javascripts output="js/compiled/main.js"
    '@CasperBountyFrontBundle/Resources/public/js/bootstrap.js'
    '@CasperBountyFrontBundle/Resources/public/js/bootstrap-multiselect.js'
    %}

    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}


    <script type="text/javascript">
        $(document).ready(function() {
            $('#form_targetid').multiselect({
                enableFiltering: true,
                maxHeight: 400,
                buttonWidth: '150px',
                nonSelectedText: 'Select targets',
                includeSelectAllOption: true,
            });
        });
    </script>


    {% stylesheets filter="scssphp" output="css/app.css"

    "@CasperBountyFrontBundle/Resources/public/scss/*"
    "@CasperBountyFrontBundle/Resources/public/css/*"
    "assets/vendor/bootstrap/dist/css/bootstrap.css"
    "assets/vendor/bootstrap/dist/css/bootstrap-theme.css"
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}

{% block pageTitle %}{% endblock %}
</head>
<body>
{% if projectId is defined %}
    {% include '@CasperBountyProjects/navigationProject.html.twig' %}
{% else %}
    {% include '@CasperBountyFront/navigationMain.html.twig' %}
{% endif %}

{% block body %}{% endblock %}
</body>
<footer>

</footer>
</html>