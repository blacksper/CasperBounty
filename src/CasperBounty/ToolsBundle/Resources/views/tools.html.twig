{% extends '@CasperBountyTools/toolsPage.html.twig' %}

{% block toolsTable %}
    <table class="table table-condensed toolsTable ">
        <thead>
        <tr>
            <th>tool name</th>
            <th>path</th>
            <th>btn</th>
        </tr>
        </thead>

        <tbody>
        {% for tool in toolsArr %}
            <tr class="{%   if tool.name=='maindomain' %}success{% endif %}">
                <td class="col-md-4">{{ tool.name }}</td>
                <td>{{ tool.cmdpath }}</td>
                <td>

                    <!--<button type="button" class="btn btn-sm btn-success"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></button>
                    -->
                    <button type="button" class="btn btn-xs btn-danger"><span class="glyphicon glyphicon-trash"
                                                                              aria-hidden="true"></span>
                    </button>

                    <button type="button" class="btn btn-xs btn-danger">create profile</button>
                    <button type="button" class="btn btn-xs btn-danger">create view template</button>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}