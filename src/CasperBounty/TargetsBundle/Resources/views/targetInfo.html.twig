{% extends '@CasperBountyFront/base.html.twig' %}

{% block body %}
    <script>
        function runTool(profileId) {
            var arr = [];
            var checkedValue = $('#targets:checked').val();
            console.log(checkedValue);
            var cv = document.getElementById('targets').value;
            $("#targets:checked").each(function () {
                arr.push($(this).val());
            });
            console.log(arr);

            $.post("/tools/" + profileId + "/run", {'targetsArr': arr.toString()}, function (data, status) {
                alert("Data: " + data + "\nStatus: " + status);
            });

        }
    </script>
    <div class="container">
        <form method="post" action="{{ path('casper_bounty_tools_getips',{'projectId':projectId}) }}">
            <p>
            <div class="btn-group">
                <button class="btn btn-info btn-sm" type="submit">Get ips</button>
                <div class="btn-group">
                    <button class="btn btn-sm btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Run
                        profile
                        <span class="caret"></span></button>
                    <ul class="dropdown-menu">
                        {% for profile in profiles %}
                            <li><a onclick="runTool({{ profile.profileId }})" href="#">{{ profile.name }} (<span
                                            style="color: #777777">{{ profile.toolId.name }} {{ profile.cmd }}</span>)</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            </p>
            <br>
            <table class="table table-condensed subtargetsTable">
                <thead>
                <tr>
                    <td></td>
                    <th>host</th>
                    <th>id</th>
                    <th>state</th>
                    <th></th>
                </tr>
                </thead>

                <tbody>
                <tr class="success">
                    <td><input type="checkbox" id="targets" name="targetsArr[]" value="{{ maintarget.targetid }}"></td>
                    <td class="col-md-4">
                        <a href="{{ path('casper_bounty_targets_targetid',{'targetId':maintarget.targetid,'projectId':projectId}) }}">{{ maintarget.host }}</a>


                        {% for ip in maintarget.getIpId() %}
                            <br>
                            <em>
                                <a href="{{ path('casper_bounty_domainsByIp',{'targetId':ip.targetid,'projectId':projectId}) }}">
                                    {{ ip.host }}
                                </a>
                            </em>
                        {% endfor %}
                    </td>
                    <td>
                        {{ maintarget.type }}
                    </td>
                    <td>
                        <span class="glyphicon glyphicon-question-sign" aria-hidden="true"></span>
                    </td>
                    <td>
                        <button type="button" class="btn btn-xs btn-primary" data-toggle="modal"
                                data-target="#tasksModal" data-id="{{ maintarget.targetid }}">
                            <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                        </button>

                    </td>
                </tr>
                {% for target in targetInfo.subtargets %}
                    <tr class="{% if target.type=='maindomain' %}success{% endif %}">
                        <td><input type="checkbox" id="targets" name="targetsArr[]" value="{{ target.targetid }}"></td>
                        <td class="col-md-4"><a
                                    href="{{ path('casper_bounty_targets_targetid',{'targetId':target.targetid,'projectId':projectId}) }}">{{ target.host }}</a>


                            {% for ip in target.getIpid() %}
                                <br>
                                <em>

                                    <a href="{{ path('casper_bounty_domainsByIp',{'targetId':ip.targetid,'projectId':projectId}) }}">
                                        {{ ip.host }}
                                    </a>
                                </em>
                            {% endfor %}
                        </td>
                        <td>{{ target.type }}</td>
                        <td>
                            <span class="glyphicon glyphicon-question-sign" aria-hidden="true"></span>
                        </td>
                        <td>
                            <button type="button" class="btn btn-xs btn-primary">
                                <span class="glyphicon glyphicon-screenshot" aria-hidden="true"></span>
                            </button>
                            <button type="button" class="btn btn-xs btn-primary">
                                <span class="glyphicon glyphicon-globe" aria-hidden="true"></span>
                            </button>

                            <button type="button" class="btn btn-xs btn-primary" data-toggle="modal" data-target="#tasksModal" data-id="{{ maintarget.targetid }}">
                                <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                            </button>

                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </form>
        <div id="tasksModal" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Create profile</h4>
                    </div>

                    <div class="modal-body">
                        Modal body text

                        {% for result in results %}
                            <pre>{{ result.result }}</pre>
                        {% endfor %}
                        <div class="result">

                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}