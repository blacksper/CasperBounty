{% extends '@CasperBountyFront/base.html.twig' %}

{% block body %}
    <script>
        function runTool(profileId) {
            var arr = [];
            var checkedValue = $('#targets:checked').val();
            console.log(checkedValue);
            var cv = document.getElementById('targets').value;
            $("#targets:checked").each(function () {
                arr.push($(this).val());
            });
            console.log(arr);

            $.post("/tools/" + profileId + "/run", {'targetsArr': arr.toString()}, function (data, status) {
                console.log("Data: " + data + "\nStatus: " + status);
            });

        }
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
    <div class="container">
        {% if errorMsg is defined %}
            <div class="alert alert-danger">
                <strong>{{ errorMsg }}</strong> Indicates a successful or positive action.
            </div>
        {% endif %}
        <div class="row">
            <div class="col-lg-6">
                <form method="post" action="{{ path('casper_bounty_tools_getips',{'projectId':projectId}) }}">
                    <p>
                    <div class="btn-group">
                        <button class="btn btn-info btn-sm" type="submit">Get ips</button>
                        <div class="btn-group">
                            <button class="btn btn-sm btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                Run
                                profile
                                <span class="caret"></span></button>
                            <ul style="width: 260px;" class="dropdown-menu">


                                <li class="bg-success"><a
                                            href="{{ path('casper_bounty_tools_homepage') }}"><span
                                                class="glyphicon glyphicon-pencil"></span> Create new
                                        profile</a></li>
                                <div class="row">
                                    {% for profile in profiles %}


                                        <div class="col-md-9">
                                            <li class="toolsListElement toolsPad"><a
                                                        onclick="runTool({{ profile.profileId }})"
                                                        href="#"> {{ profile.name }}
                                                    (<span>{{ profile.toolId.name }} </span>)</a>
                                            </li>
                                        </div>
                                        <div class="col-md-2">
                                            <li class="tooltip-wide"><span class="glyphicon glyphicon-alert"
                                                                           data-toggle="tooltip"
                                                                           data-placement="right"
                                                                           title="{{ profile.cmd }}"></span></li>
                                        </div>

                                    {% endfor %}
                                </div>
                            </ul>
                        </div>
                    </div>
                    </p>
                    <br>
                    <table class="table table-condensed subtargetsTable">
                        <thead>
                        <tr>
                            <td></td>
                            <th>host</th>
                            <th>id</th>
                            <th>state</th>
                            <th></th>
                        </tr>
                        </thead>

                        <tbody>
                        {% if maintarget is defined %}
                            <tr class="success">
                                <td><input type="checkbox" id="targets" name="targetsArr[]"
                                           value="{{ maintarget.targetid }}"></td>
                                <td class="col-md-4">
                                    <a href="{{ path('casper_bounty_targets_targetid',{'targetId':maintarget.targetid,'projectId':projectId}) }}">{{ maintarget.host }}</a>


                                    {% for ip in maintarget.getIpId() %}
                                        <br>
                                        <em>
                                            <a href="{{ path('casper_bounty_domainsByIp',{'targetId':ip.targetid,'projectId':projectId}) }}">
                                                {{ ip.host }}
                                            </a>
                                        </em>
                                    {% endfor %}
                                </td>
                                <td>
                                    {{ maintarget.type }}
                                </td>
                                <td>
                                    <span class="state glyphicon {% if maintarget.state== "not_resolve" or maintarget.state=="down" %}glyphicon glyphicon-remove-sign text-danger{% elseif maintarget.state=="up" %}glyphicon glyphicon-ok-sign{% else %}glyphicon-question-sign text-info{% endif %}" aria-hidden="true"></span>

                                </td>
                                <td>
                                    <button type="button" class="btn btn-xs btn-primary" data-toggle="modal"
                                            data-target="#tasksModal" data-id="{{ maintarget.targetid }}">
                                        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                                    </button>

                                </td>
                            </tr>
                        {% endif %}

                        {% if targetInfo is defined %}
                            {% for target in targetInfo.subtargets %}
                                <tr class="{% if target.type=='maindomain' %}success{% endif %}">
                                    <td><input type="checkbox" id="targets" name="targetsArr[]"
                                               value="{{ target.targetid }}"></td>
                                    <td class="col-md-4"><a
                                                href="{{ path('casper_bounty_targets_targetid',{'targetId':target.targetid,'projectId':projectId}) }}">{{ target.host }}</a>


                                        {% for ip in target.getIpid() %}
                                            <br>
                                            <em>

                                                <a href="{{ path('casper_bounty_domainsByIp',{'targetId':ip.targetid,'projectId':projectId}) }}">
                                                    {{ ip.host }}
                                                </a>
                                                {% for domain in ip.domainid %}
                                                    {% if domain.type =="PTR" %}
                                                        {{ dump(domain.host) }}
                                                    {% endif %}
                                                {% endfor %}

                                            </em>
                                        {% endfor %}
                                    </td>
                                    <td>{{ target.type }}</td>
                                    <td>
                                        <span class="state glyphicon {% if target.state== "not_resolve" or target.state=="down" %}glyphicon glyphicon-remove-sign text-danger{% elseif target.state=="up" %}glyphicon glyphicon-ok-sign text-success{% else %}glyphicon-question-sign text-info{% endif %}" aria-hidden="true"></span>
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-xs btn-default">
                                            <span class="glyphicon glyphicon-screenshot" aria-hidden="true"></span>
                                        </button>
                                        <button type="button" class="btn btn-xs btn-default">
                                            <span class="glyphicon glyphicon-globe" aria-hidden="true"></span>
                                        </button>

                                        <button type="button" class="btn btn-xs btn-default" data-toggle="modal"
                                                data-target="#tasksModal" data-id="{{ maintarget.targetid }}">
                                            <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                                        </button>

                                    </td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                        </tbody>
                    </table>
                </form>
            </div>
            <div class="col-lg-6">

                <ul>
                    {% if group is defined %}
                        {% for ipgr in group %}
                            <li>{{ ipgr.cnt }} |
                                <a href="{{ path('casper_bounty_domainsByIp',{'targetId':ipgr.targetid,'projectId':projectId}) }}">{{ ipgr.host }}</a>
                            </li>
                        {% endfor %}
                    {% endif %}
                </ul>
            </div>
        </div>


    </div>
{% endblock %}