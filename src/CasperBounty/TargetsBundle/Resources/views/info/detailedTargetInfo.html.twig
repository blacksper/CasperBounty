{% extends '@CasperBountyFront/base.html.twig' %}

{% block body %}


    <div class="row">
        <div class="col-2">
            <div class="list-group" id="list-tab" role="tablist">
                {% for service in services %}

                    <a class="list-group-item list-group-item-action {% if loop.index0==0 %} active {% endif %}" id="list-home-list" data-toggle="list" href="#port-{{ service.port }}" role="tab" aria-controls="home">{{ service.service}} {{ service.port}}
                        <i class="pull-right far fa-circle {% if service.state==1 %}text-success{% else %}danger{% endif %}" aria-hidden="true"></i>
                    </a>
                {% endfor %}

            </div>
        </div>
        <div class="col-10">
            <div class="tab-content" id="nav-tabContent">
        {% for service in services %}
                    <div class="tab-pane fade show {% if loop.index0==0 %} active {% endif %}" id="port-{{ service.port }}" role="tabpanel" aria-labelledby="list-home-list">
                        {{ dump(service.taskid) }}
                    </div>
        {% endfor %}

            </div>
        </div>
    </div>

{% endblock %}